import random
import math

def simulated_annealing(m, b, T=1.0, cooling=0.99, step=0.1, max_iter=1000):
    for _ in range(max_iter):
        m_new = m + random.uniform(-step, step)
        b_new = b + random.uniform(-step, step)

        delta = MSE(m_new, b_new) - MSE(m, b)

        if delta < 0 or random.random() < math.exp(-delta / T):
            m, b = m_new, b_new

        T *= cooling
    return m, b
